    <script>
        const text = `Qaraqalpaq dÃ¡stanlarÄ± saytÄ±na xosh keldiÅ„iz!\nBizde tek dÃ¡stanlar emes qaraqalpaq Ã¡debiyatÄ±na tiyisli bir qansha kitaplardÄ± da taba alasÄ±z!`;
        let i = 0;
        const speed = 50; // harf chiqish tezligi (ms)

        function typeWriter() {
            if (i < text.length) {
                document.getElementById("typewriter").innerHTML += text.charAt(i);
                i++;
                setTimeout(typeWriter, speed);
            }
        }

        window.onload = typeWriter;
    </script>

