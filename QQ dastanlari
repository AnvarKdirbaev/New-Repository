    <script>
        function toggleDropdown() {
            const dropdown = document.getElementById("langDropdown");
            dropdown.style.display = dropdown.style.display === "block" ? "none" : "block";
        }

        // Dropdown tashqarisiga bosilganda yopish
        window.onclick = function (event) {
            if (!event.target.matches('.lang-btn') && !event.target.closest('.lang-btn')) {
                const dropdown = document.getElementById("langDropdown");
                if (dropdown) {
                    dropdown.style.display = "none";
                }
            }
        }
    </script>
    <script>
        window.addEventListener('scroll', function () {
            const header = document.querySelector('.a1');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Mobil ko'rinishda elementlarni yashirish uchun
        function checkMobileView() {
            const mobileItems = document.querySelectorAll('.a112, .magliwmat');
            const mobileItem = document.querySelector('.a1');  // querySelector (bitta element) ishlatildi
            if (window.innerWidth <= 768) {
                mobileItems.forEach(item => {
                    item.style.display = 'none';
                });
                if (mobileItem) {
                    mobileItem.style.justifyContent = 'center';
                    mobileItem.style.gap = '20px';
                }
            } else {
                mobileItems.forEach(item => {
                    item.style.display = '';
                });
                if (mobileItem) {
                }
            }
        }

        // Sahifa yuklanganda va o'lcham o'zgarganda tekshirish
        window.addEventListener('load', checkMobileView);
        window.addEventListener('resize', checkMobileView);
    </script>


