  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Tuǥmalar ushın qáliplesti
      document.querySelectorAll('.details-btn').forEach(button => {
        const detailsDiv = button.closest('.book').querySelector('.book-details');
        
        button.addEventListener('click', () => {
          const isShown = detailsDiv.classList.toggle('show');
          button.innerHTML = isShown 
            ? '<i class="fas fa-chevron-up"></i> Jabıw' 
            : '<i class="fas fa-chevron-down"></i> Tolıǵıraq';
        });
      });

      // Júklep alıw tuǥmaları ushın qáliplesti
      document.querySelectorAll('.download-btn').forEach(button => {
        button.addEventListener('click', () => {
          const fileName = button.getAttribute('data-file');
          const fileUrl = `download.php?file=${encodeURIComponent(fileName)}`;
          
          const link = document.createElement('a');
          link.href = fileUrl;
          link.download = fileName;
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);
        });
      });
    });
  </script>
